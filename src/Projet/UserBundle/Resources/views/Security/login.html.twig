{% extends 'ProjetUserBundle::layout5.html.twig' %}


{% trans_default_domain 'FOSUserBundle' %}
{% block titre %}Authentification {% endblock  %}
{% block content %}
    
    
 
    
    
    
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <br> <br> <br>  <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br>

    <br>  <label for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" /><br>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
   

    <br> <br> <br> <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    <br><br><br>
    <a href="{{path('fos_user_registration_register')}}"> <font color="blue"> Inscription</font> </a>
</form>
{% endblock  %}
